<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/home_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/home_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.FansFun"
        tools:ignore="HardcodedDebugMode"
        tools:targetApi="31">
        <activity
            android:name=".activities.EditProfile"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.MyEvents"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.SearchEventList"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.ListaEventi"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.PrincipalActivity"
            android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.ViewEvent"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.InsertJSON"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.PostRegistrationActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.AddEvent"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.ProfileActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.RegistrationActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>